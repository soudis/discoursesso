<?xml version="1.0"?>
<info xmlns:xsi= "http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="https://apps.nextcloud.com/schema/apps/info.xsd">
    <id>discoursesso</id>
    <name>Discourse SSO</name>
    <summary>Enable Discourse to authenticate via Nextcloud</summary>
    <description><![CDATA[Discourse has it&#39;s own SSO protocol, that needs an specially designed endpoint to authenticate with. This app implements this endpoint and allows Discourse instances to authenticate against an Nextcloud instance. Please look at the admin documentation for security issues!]]></description>
    <version>1.24.0</version>
    <licence>agpl</licence>
    <author mail="florian.humer@gmail.com" homepage="https://github.com/soudis/discoursesso">Florian Humer</author>
    <documentation>
        <user>https://github.com/soudis/discoursesso/blob/master/README.md</user>
        <admin>https://github.com/soudis/discoursesso/blob/master/README.md</admin>
    </documentation>    
    <namespace>DiscourseSSO</namespace>
    <category>integration</category>
    <bugs>https://github.com/soudis/discoursesso/issues</bugs>
    <repository type="git">https://github.com/soudis/discoursesso.git</repository>
    <screenshot small-thumbnail="https://raw.githubusercontent.com/soudis/discoursesso/master/appinfo/discoursesso_sm.png">https://raw.githubusercontent.com/soudis/discoursesso/master/appinfo/discoursesso.png</screenshot>
    <dependencies>
        <nextcloud min-version="12" max-version="24"/>
    </dependencies>
    <settings>
        <admin>OCA\DiscourseSSO\Settings\Admin</admin>
    </settings>    
</info>
